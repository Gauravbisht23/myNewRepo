<aura:component >
    <aura:attribute name="Input1" type="integer" description="For First input"/>
    <aura:attribute name="Input2" type="integer" description="For Second input" />
    <aura:attribute name="Output" type="integer" description="For Output" />
    
    
    <lightning:input label="Enter the First Number"  value="{!v.Input1}" type="number" required="true" />
    <lightning:input label="Enter the Second Number"  value="{!v.Input2}" type="number" required="true" />
    
    The output is - {!v.Output} <br/>
    <lightning:button variant="brand"  label="Add"  value="Component Methods" onclick="{!c.doAdd}" />
        <lightning:button variant="brand"  label="Sub"  value="Component Methods" onclick="{!c.doSub}" />
        <lightning:button variant="brand"  label="Multiply"  value="Component Methods" onclick="{!c.domul}" />
        <lightning:button variant="brand" label="Divide"  value="Component Methods" onclick="{!c.doDiv}" />
    
    
    
                    
</aura:component>